<div class="container">
  <div class="jumbotron mt-5">
    <div class="row">
      <div class="col-sm-8">
        <h1 class="display-4"><%= @artist.name %></h1>
        <p class="lead">Albums (<%= @size %>)</p> 
        <% @artist.albums.each do |album| %>  <!-- Pilas con la sintaxis, S al final de album -->
        <div class="card d-inline-block mr-4" style="width: 12rem;">
          <img class="card-img-top p-2" src=<%= album.image_url %> alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= album.name %></h5>
            <p class="card-text">Lanzado en:</p>
            <p class="card-text"><%= album.released_at %></p>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-sm-4">
        <img src=<%= @artist.image_url %> class="img-fluid" alt="Responsive image">
      </div>
    </div>
    <hr class="my-4">
  </div>
</div>